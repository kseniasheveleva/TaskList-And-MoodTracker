<div class="flex flex-col justify-between min-h-screen">
  <header class="p-5 bg-purple-100 flex justify-end items-center h-24">
    <nav class="flex gap-5 align-center">
      {{#each links}}
        <router-link href="{{this.href}}" class="text-lime-900 text-xl px-4 py-2" label="{{this.label}}"></router-link>
      {{/each}}
    </nav>
  </header>

  <main>
    <div class="mx-auto max-w-7xl px-4  pb-40 pt-16 text-center ">
      <hgroup>
        <h1 class="text-5xl text-lime-900">MOODDY</h1>
        <p class="pt-2">track your mood, write about your feelings, complete tasks</p>
      </hgroup>
    </div>
  </main>

  <footer class="flex p-5 items-center h-24">
    <p class="text-sm text-slate-500">
      Copyright &copy; 2024. All rights reserved.
    </p>
  </footer>
</div>