<form class="create-task-form flex flex-col gap-3">
  <label class="w-full">
    <p class="text-sm text-black">Title</p>
    <input type="text" name="title" class="p-2 w-full border rounded" />
  </label>

  <label class="w-full">
    <p class="text-sm text-black">Description</p>
    <textarea name="description" class="p-2 w-full border rounded"></textarea>
  </label>

  <label>
    <p class="text-sm text-black">Task category</p>
    <select name="category" class="p-2 w-full border rounded">
      <option value="major">Major</option>
      <option value="minor">Minor</option>
      <option value="trivial">Trivial</option>
    </select>
  </label>
</form>